
extends layout
block content
    h1 Update Book
    include error
    form(method='post' action='/books/' + books.id)
        p
            label(for='title') Title
            input#title(name='title', type='text', value=books.title)
        p
            label(for='author') Author
            input#author(name='author', type='text', value=books.author)
        p
            label(for='genre') Genre
            input#genre(name='genre', type='text', value=books.genre)
        p
            label(for='year') Year
            input#year(name='year', type='text', value=books.year)
        p
            input.button(type='submit', value='Update Book')
            a.button.delete(href=books.id + '/delete/') Delete
            a.button(href='/') Cancel